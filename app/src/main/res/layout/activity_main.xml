<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/bg"
        android:scaleType="centerCrop"
        android:src="@drawable/img5" />

    <TextView
        android:id="@+id/NameOfTheGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#DCE775"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:text="@string/app_name"
        android:textColor="#1B5E20"
        android:textSize="70sp"
        android:textStyle="bold" />


    <FrameLayout
        android:id="@+id/SinglePlayerFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NameOfTheGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#DCE775">


        <TextView
            android:id="@+id/SinglePlayer"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="@string/SinglePlayer"
            android:textColor="#BF360C"
            android:textSize="30sp"
            android:textStyle="bold" />


    </FrameLayout>


    <FrameLayout
        android:id="@+id/TwoPlayerFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SinglePlayerFrame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#DCE775">


        <TextView
            android:id="@+id/TwoPlayer"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="@string/TwoPlayer"
            android:textColor="#BF360C"
            android:textSize="30sp"
            android:textStyle="bold" />

    </FrameLayout>


</RelativeLayout>